@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.InventoryViewModel

<div id="section-search-results" class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Accessions (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div id="section-search-results">
            <div id="section-search-results">
                <table id="data_table_accession" class="table table-striped ggtools-table" style="width:100%;">
                    <thead>
                        <tr>
                            <th></th>
                            <th width="5%">ID</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Life Form</th>
                            <th>Improvement Status</th>
                            <th>Reproductive Uniformity</th>
                            <th>Initial Received Form</th>
                            <th>Life Cyele</th>
                            <th>Life Habit</th>
                            <th>Life Sex</th>
                            <th>Initially Received</th>
                            <th>Inventory</th>
                            <th>Owned By</th>
                            <th>As Of</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.DataCollection.Count() > 0)
                        {
                            foreach (var result in Model.DataCollection)
                            {
                                <tr>
                                    <td>
                                        @result.ID
                                    </td>
                                    <td>
                                        @result.ID
                                    </td>
                                    <td>@Html.Raw(result.AssembledName)</td>
                                    <td>@Html.Raw(Model.FormatBoolean(result.StatusCode))</td>
                                    <td>@result.LifeFormCode</td>
                                    <td>@result.ImprovementStatusCode</td>
                                    <td>@result.ReproductiveUniformityCode</td>
                                    <td>@result.InitialReceivedFormCode</td>
                                    <td>@result.LifeCycleCode</td>
                                    <td>@result.LifeHabitCode</td>
                                    <td>@result.LifeSexCode</td>
                                    <td>@result.InitialReceivedDate.ToShortDateString()</td>
                                    <td>
                                        <a href="@Url.Action("Index","Inventory")">@result.InventoryCount</a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Cooperator", new { @entityId = result.OwnedByCooperatorID })">
                                            
                                            @result.OwnedByCooperatorName
                                        </a>
                                    </td>
                                    <td>@result.OwnedDate.ToShortDateString()</td>
                                    <td>
                                        @if (Model.EventAction == "FOLDER")
                                        {
                                            <a href="@Url.Action("DeleteItem", "AppUserItemFolder", new { @folderId = result.FolderID, @sysFolderItemMapId = result.SysFolderItemMapId })"
                                               class="btn btn-danger btn-sm float-right row-edit margin-r-5">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Edit", "Accession", new { entityId = result.ID })" class="btn btn-default btn-sm float-right row-edit">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>


