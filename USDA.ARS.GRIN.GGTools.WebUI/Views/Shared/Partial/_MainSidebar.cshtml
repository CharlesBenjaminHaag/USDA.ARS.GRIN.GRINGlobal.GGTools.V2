<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="https://npgsweb.ars-grin.gov/gringlobal/images/admin/user-default.png" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@AppInfo.GetAuthenticatedUser().FirstName @AppInfo.GetAuthenticatedUser().LastName</p>
                <a href="#"><i class="fa fa-circle text-success"></i> @Session["APP_CONTEXT"]</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>
            <li class="active treeview">
                <a href="#">
                    <i class="fa fa-home"></i> <span>Home</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="@Url.Action("Index","Home")"><i class="fa fa-circle-o"></i> GGTools </a></li>
                </ul>
            </li>
            <li class="header">ADMIN</li>
            <li><a href="@Url.Action("Index","Error")"><i class="fa fa-circle-o text-red"></i> <span>Error Logs</span></a></li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
