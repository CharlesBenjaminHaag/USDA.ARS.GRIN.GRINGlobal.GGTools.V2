<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Content/dist/img/user-default.png" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@AppInfo.GetAuthenticatedUser().FirstName @AppInfo.GetAuthenticatedUser().LastName</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Home</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" id="txtSearchByID" name="q" class="form-control allownumericwithoutdecimal" placeholder="Enter WOR ID...">
                <span class="input-group-btn">
                    <button type="button" id="btnSearchByID" name="search" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>
            <li class="active treeview">
                <a href="#">
                    <i class="fa fa-home"></i> <span>Home</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="@Url.Action("Index","Home")"><i class="fa fa-circle"></i> GGTools </a></li>
                    <li><a href="@Url.Action("NRR","Home")"><i class="fa fa-circle"></i> NRR Tool</a></li>
                </ul>
            </li>


            <li>
                <a href="@Url.Action("Search","WebOrder")">
                    <i class="fa fa-table"></i> <span>Web Order Requests</span>
                </a>
            </li>
            <li class="header">REPORTS</li>
            <li><a href="@Url.Action("Index", "Reports", new { reportCode = "WORORD" })"><i class="fa fa-file text-blue"></i><span> Web Orders to Orders</span></a></li>
            <li><a href="@Url.Action("Index", "Reports", new { reportCode = "NRRPOFF" })"><i class="fa fa-file text-blue"></i><span>  NRR Past Offenders</span></a></li>
            <li><a href="@Url.Action("Index", "Reports", new { reportCode = "NRRPREV" })"><i class="fa fa-file text-blue"></i><span>  NRR Prevention</span></a></li>
            <li><a href="@Url.Action("Index", "Reports", new { reportCode = "WOSTAT" })"><i class="fa fa-file text-blue"></i><span>  Web Order Statistics (2022)</span></a></li>

            <li class="header">ADMIN</li>
            <li><a href="@Url.Action("Index", "EmailTemplate")"><i class="fa fa-wrench"></i><span> Email Templates</span></a></li>
            <li><a href="@Url.Action("Index","Error")"><i class="fa fa-circle-o text-red"></i> <span>Error Logs</span></a></li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
<script type="text/javascript">
    $("#btnSearchByID").click(function () {
        var entityId = $("#txtSearchByID").val();
        var url = "@Url.Action("Lookup","WebOrder")" + "?entityId=" + entityId;
        window.location.href = url;
    });

    $(".allownumericwithoutdecimal").on("keypress keyup blur", function (event) {
        $(this).val($(this).val().replace(/[^\d].+/, ""));
        if ((event.which < 48 || event.which > 57)) {
            event.preventDefault();
        }
    });
</script>