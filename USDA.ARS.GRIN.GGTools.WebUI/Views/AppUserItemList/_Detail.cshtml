@model USDA.ARS.GRIN.GGTools.ViewModelLayer.AppUserItemListViewModelBase
@using (Html.BeginForm("Search", "AppUserItemList", FormMethod.Post, new { id = "frmSearch" }))
{
    @Html.HiddenFor(x => x.EventAction)
    @Html.HiddenFor(x => x.EventValue)
    @Html.HiddenFor(x => x.TableName)
    @Html.HiddenFor(x => x.TableCode)
    @Html.HiddenFor(x => x.PageTitle)
    @Html.HiddenFor(x => x.AuthenticatedUserCooperatorID)
    @Html.HiddenFor(x => x.ItemIDList)
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Search Criteria</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div id="section-search-criteria" class="card-body">
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <label>Created By</label>
                        @Html.DropDownListFor(x => x.SearchEntity.CreatedByCooperatorID, Model.Cooperators, "All cooperators", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Tab Name</label>
                        @Html.TextBoxFor(x => x.SearchEntity.TabName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>List Name</label>
                        @Html.TextBoxFor(x => x.SearchEntity.ListName, new { @class = "form-control" })
                        @*@Html.DropDownListFor(x => x.SearchEntity.Category, Model.Categories, "All categories", new { @class = "form-control" })*@
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>ID Type</label>
                        @Html.TextBoxFor(x => x.SearchEntity.IDType, new { @class = "form-control" })
                        @*@Html.DropDownListFor(x => x.SearchEntity.FolderTypeDescription, Model.Types, "All types", new { @class = "form-control" })*@
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group form-horizontal">
                        <label>Imported From CT</label>
                        @Html.DropDownListFor(x => x.SearchEntity.IsImported, Model.YesNoOptions, "Either", new { @class = "form-control" })
                    </div>
                </div>

            </div>
        </div>
        <div class="card-footer">
            <button id="btnReset" type="button" class="btn btn-default">Reset</button>
            <button type="submit" class="btn btn-default float-right">Search</button>
        </div>
    </div>
}
