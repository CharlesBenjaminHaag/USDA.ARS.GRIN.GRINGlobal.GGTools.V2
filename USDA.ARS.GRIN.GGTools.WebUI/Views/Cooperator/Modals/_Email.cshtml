@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CooperatorViewModel
<div class="modal fade" id="modal-cooperator-email" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Preview Cooperator Email</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("SetStatus", "Cooperator", FormMethod.Post, new { id = "frmEditCooperatorEmail"}))
                {
                    <div class="form-group">
                        @Html.TextBoxFor(x=>x.EmailMessage.From, new { @class="form-control"  })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.EmailMessage.To, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.EmailMessage.Subject, new { @class="form-control" })
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(x => x.EmailMessage.Body, new { @class = "form-control", rows="20" })
                    </div>
                }
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="btnSendEmailAndActivate" type="button" class="btn btn-default" data-dismiss="modal">Send Email and Activate Cooperator</button>
            </div>
        </div>

    </div>

</div>


