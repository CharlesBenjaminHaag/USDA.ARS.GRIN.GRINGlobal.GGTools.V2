@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CooperatorViewModel
<table id="data-table-cooperator-lookup" class="table table-striped ggtools" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataCollection.Count() > 0)
        {
            foreach (var result in Model.DataCollection)
            {
            <tr>
                <td>
                    @result.ID
                </td>
                <td><span class="label label-default">@result.ID</span></td>
                <td>@result.FirstName</td>
                <td>@result.LastName</td>
                <td>@result.EmailAddress</td>
            </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">
                    <div class="callout callout-info" style="vertical-align:middle; margin-top:5px;">
                        Your search returned no matches.
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTableLookupFormat("data-table-cooperator-lookup");
    });
</script>