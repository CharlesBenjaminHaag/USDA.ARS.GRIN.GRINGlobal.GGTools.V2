@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CooperatorViewModel
<div class="card card-solid">
    <div class="card-body pb-0">
        <div class="row">
            @if (Model.DataCollection.Count > 0)
            {
                foreach (var result in Model.DataCollection)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                    <div class="card bg-light d-flex flex-fill">
                        <div class="card-header text-muted border-bottom-0">
                            @result.EmailAddress
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@result.FullName</b></h2>
                                    <p class="text-muted text-sm"><b>Organization: </b> @result.Organization @result.OrganizationAbbrev @result.OrganizationRegionCode </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address: @result.AddressLine1 @result.City @result.StateName @result.PostalIndex</li>
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Phone #: @result.PrimaryPhone</li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="~/dist/img/user-default.png" alt="user-avatar" class="img-circle img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="#" class="btn btn-sm">
                                    <i class="fas fa-table"></i>
                                </a>
                                <a href="@Url.Action("Edit", "Cooperator", new { @entityId = result.ID })" class="btn btn-sm btn-default">
                                    <i class="fas fa-user"></i> View Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                }
            }
            else
            { 
                <div class="col-md-12">
                    <div class="alert alert-info alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h5><i class="icon fas fa-exclamation-triangle"></i> No Site Curators Assigned</h5>
                        This site does not have any designated curators.
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="card-footer">
        <a href="@Url.Action("New","Account")" class="btn btn-default float-right">
            <i class="fas fa-plus"></i>
            Add New Cooperator
        </a>
    </div>
</div>

