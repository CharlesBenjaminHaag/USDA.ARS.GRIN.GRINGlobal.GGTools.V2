@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CooperatorViewModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html lang="en">
@Html.Partial("~/Views/Shared/_Head.cshtml")
<body class="hold-transition layout-top-nav text-sm">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand-md navbar-light text-sm">
            <div class="container" style="max-width:1500px;">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <img src="~/dist/img/GGlogo_BW.gif" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                    <span class="brand-text font-weight-light">GGTools</span>
                </a>
                <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                    <!-- BEGIN EDIT PAGE MENU -->
                    <ul class="navbar-nav">
                        @if (Model.Entity.ID > 0)
                        {
                        }
                    </ul>
                    <!-- END EDIT PAGE MENU-->
                </div>
                <!-- BEGIN RIGHT-ALIGNED NAV MENU -->
                <ul class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
                    @Html.Partial("~/Views/Shared/_NavbarRight.cshtml")
                </ul>
                <!-- END RIGHT-ALIGNED NAV MENU -->

            </div>
        </nav>
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container" style="max-width:1500px;">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">
                                Add New Cooperator
                            </h1>
                        </div>
                        <div class="col-sm-6">
                            @Html.Partial("~/Views/Taxonomy/Shared/_Breadcrumbs.cshtml")
                        </div>
                    </div>
                </div>
            </div>
            <div class="content">
                <div class="container" style="max-width:1500px;">
                    <div class="row">
                        <div class="col-5 col-sm-3">
                            <div class="nav flex-column nav-tabs h-100" id="vert-tabs-tab" role="tablist" aria-orientation="vertical">
                                <a class="nav-link active" id="vert-tabs-home-tab" data-toggle="pill" href="#vert-tabs-home" role="tab" aria-controls="vert-tabs-home" aria-selected="true"><h5><i class="icon fas fa-user"></i> Contact Information</h5></a>
                                <a class="nav-link" id="vert-tabs-profile-tab" data-toggle="pill" href="#vert-tabs-profile" role="tab" aria-controls="vert-tabs-profile" aria-selected="false"><h5><i class="icon fas fa-building"></i> Address and Location</h5></a>
                                <a class="nav-link" id="vert-tabs-messages-tab" data-toggle="pill" href="#vert-tabs-messages" role="tab" aria-controls="vert-tabs-messages" aria-selected="false"><h5><i class="icon fas fa-check"></i> Confirm and Submit</h5></a>
                            </div>
                        </div>
                        <div class="col-7 col-sm-9">
                            <div class="tab-content" id="vert-tabs-tabContent">
                                <div class="tab-pane text-left fade active show" id="vert-tabs-home" role="tabpanel" aria-labelledby="vert-tabs-home-tab">
                                    <div class="card card-primary">
                                        <div class="card-header">
                                            <h3 class="card-title">
                                                <i class="icon fas fa-user"></i>
                                                Contact Information
                                            </h3>
                                            <div class="card-tools">
                                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="alert alert-info alert-dismissible">
                                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                                <h5><i class="icon fas fa-info"></i> Guide</h5>
                                                Please enter all required fields, as indicated below. Note that this user will <strong>not</strong> need to create a web user account.
                                            </div>
                                            <div class="row">
                                                @Html.HiddenFor(x => x.PageTitle)
                                                @Html.HiddenFor(x => x.EventAction)
                                                @Html.HiddenFor(x => x.EventValue)
                                                @Html.HiddenFor(x => x.TableName)
                                                @Html.HiddenFor(x => x.TableCode)
                                                @Html.HiddenFor(x => x.Entity.ID)
                                                @Html.HiddenFor(x => x.Entity.StatusCode)
                                                @Html.Partial("~/Views/Shared/_ValidationMessages.cshtml")
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        <div class="form-group">
                                                            <label>Salutation</label>
                                                            @Html.DropDownListFor(x => x.Entity.Salutation, Model.Salutations, "Select value", new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-5">
                                                        <div class="form-group">
                                                            <label>
                                                                First Name
                                                                <code>*</code>
                                                            </label>
                                                            @Html.TextBoxFor(x => x.Entity.FirstName, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-5">
                                                        <div class="form-group">
                                                            <label>
                                                                Last Name
                                                                <code>*</code>
                                                            </label>
                                                            @Html.TextBoxFor(x => x.Entity.LastName, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Job Title</label>
                                                            @Html.TextBoxFor(x => x.Entity.JobTitle, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label>Organization</label>
                                                            @Html.TextBoxFor(x => x.Entity.Organization, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <div class="form-group">
                                                            <label>Abbrev</label>
                                                            @Html.TextBoxFor(x => x.Entity.OrganizationAbbrev, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>
                                                                Email
                                                                <code>*</code>
                                                            </label>
                                                            @Html.TextBoxFor(x => x.Entity.EmailAddress, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Phone</label>
                                                            @Html.TextBoxFor(x => x.Entity.PrimaryPhone, new { @class = "form-control" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label>Category</label>
                                                        @Html.DropDownListFor(x => x.Entity.CategoryCode, Model.Categories, "Select value", new { @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <button class="btn btn-danger">Reset</button>
                                            <button class="btn btn-success float-right">Save Changes</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="vert-tabs-profile" role="tabpanel" aria-labelledby="vert-tabs-profile-tab">
                                    <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">
                                            <i class="icon fas fa-building"></i>
                                            Site
                                        </h3>
                                        <div class="card-tools">
                                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                
                                                <div id="section-site-address"><!--PLACEHOLDER--></div>
                                            </div>
                                            <div class="col-md-6">
                                                <h5>Address</h5>
                                                <div class="form-group">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="radio1" checked="">
                                                        <label class="form-check-label">This new cooperator works at my site, and will use the same address.</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="radio1" >
                                                        <label class="form-check-label">I would like to customize the address.</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" disabled="">
                                                        <label class="form-check-label">Radio disabled</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="vert-tabs-messages" role="tabpanel" aria-labelledby="vert-tabs-messages-tab">
                                    <div class="card">
                                        <div class="card-header"></div>
                                        <div class="card-body">
                                            <h4>Confirmation</h4>
                                            <p>Please verify that the information you've entered is correct. If not, please return the relevant sections and make any necessary changes.'</p>
                                        </div>
                                        <div class="card-footer">
                                            <button id="SubmitCooperatorRequest" type="submit" class="btn btn-success float-right margin-left-05">
                                                <i class="icon fas fa-check"></i>
                                                Submit This Cooperator Request
                                            </button>
                                            <button type="button" class="btn btn-danger">
                                                <i class="icon fas fa-trash"></i>
                                                Clear Form
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @using (Html.BeginForm("Save", "Cooperator", FormMethod.Post, new { id = "frmEdit" }))
                {
                    @Html.HiddenFor(x => x.Entity.StatusCode)
                    @Html.HiddenFor(x => x.AuthenticatedUser.SiteID)
                    <div class="row">
                        <div class="col-md-7">
                        </div>
                    </div>
                    
                }
            </div>
        </div>
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
        @Html.Partial("~/Views/Shared/_Footer.cshtml")
    </div>
</body>
</html>

<script type="text/javascript">
    $(document).ready(function () {
        Init();
    });

    function Init() {
        var authenticatedUserSiteId = $("#AuthenticatedUser_SiteID").val();
        $("#Entity_SiteID option[value=" + authenticatedUserSiteId + "]").attr('selected', 'selected');
        LoadSite(authenticatedUserSiteId);
    }

    $('#Entity_SiteID').on('change', function () {
        LoadSite(this.value);
    });
    //
    $('#SubmitCooperatorRequest').on('click', function () {
        var firstName = $("#Entity_FirstName").val();
        var lastName = $("#Entity_LastName").val();
        var jobTitle = $("#Entity_JobTitle").val();
        var organization = $("#Entity_Organization").val();
        var organizationAbbrev = $("#Entity_OrganizationAbbrev").val();
        var emailAddress = $("#Entity_EmailAddress").val();
        var primaryPhone = $("#Entity_PrimaryPhone").val();
        var categoryCode = $("#Entity_CategoryCode").val();

        //DEBUG
        alert("FN " + firstName + " AND LN " + lastName + "J " + jobTitle + " O " + organization + " OA " + organizationAbbrev + " E " + emailAddress + " CT " + categoryCode);
    });


    function LoadSite(siteId) {
        link = '@Url.Action("_Get","Site")';
        var formData = new FormData();

        formData.append("entityId", siteId);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-site-address").html(response);
            }
        });
    }
</script>
@Html.Partial("~/Views/Shared/_Scripts.cshtml")

