@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CooperatorViewModel
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Cooperators (@Model.DataCollection.Count())</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="card-body">
        <table id="data_table_cooperator" class="table table-striped">
            <thead>
                <tr>
                    <th width="5%"></th>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.DataCollection != null)
                {
                    if (Model.DataCollection.Count() > 0)
                    {
                        foreach (var result in Model.DataCollection)
                        {
                            <tr>
                                <td>
                                    @result.ID
                                </td>
                                <td>@Html.Raw(result.FirstName)</td>
                                <td>@Html.Raw(result.LastName)</td>

                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>

