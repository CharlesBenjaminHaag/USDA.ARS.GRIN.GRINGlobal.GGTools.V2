@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CooperatorViewModel
<div id="modal-cooperator-add" class="modal fade" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Request New Curator Tool Account</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
           </div>
            <div class="modal-footer justify-content-between">
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('#Entity_SiteID').on('change', function () {
        LoadSite(this.value);
    });

    function LoadSite(siteId) {
        link = '@Url.Action("_Get","Site")';
        var formData = new FormData();

        formData.append("entityId", siteId);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-site-address").html(response);
            }
        });
    }
</script>