@model USDA.ARS.GRIN.GGTools.ViewModelLayer.WebOrderRequestViewModel

<div class="card">
    <div class="card-header p-2">
        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Search Criteria</a></li>
            <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="activity">
                <div id="section-search-criteria" class="row">
                    <div class="col-md-1">
                        <div class="form-group form-horizontal">
                            <label>ID</label>
                            @Html.TextBoxFor(x => x.SearchEntity.ID, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div id="section-alternate-name" class="form-group form-horizontal">
                            <label>Requestor First Name</label>
                            @Html.TextBoxFor(x => x.SearchEntity.WebCooperatorFirstName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div id="section-alternate-name" class="form-group form-horizontal">
                            <label>Requestor Last Name</label>
                            @Html.TextBoxFor(x => x.SearchEntity.WebCooperatorLastName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div id="section-alternate-name" class="form-group form-horizontal">
                            <label>Requestor Email</label>
                            @Html.TextBoxFor(x => x.SearchEntity.WebCooperatorEmailAddress, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div id="section-alternate-name" class="form-group form-horizontal">
                            <label>Requestor Organization</label>
                            @Html.TextBoxFor(x => x.SearchEntity.WebCooperatorOrganization, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group form-horizontal">
                            <label>Country</label>
                            @Html.DropDownListFor(x => x.SearchEntity.WebCooperatorAddressCountry, Model.Countries, "All countries", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group form-horizontal">
                            <label>Time Frame</label>
                            @Html.DropDownListFor(x => x.SearchEntity.TimeFrame, Model.TimeFrameOptions, "All time frames", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div id="section-family-name" class="form-group form-horizontal">
                            <label>Year</label>
                            @Html.TextBoxFor(x => x.SearchEntity.Year, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label>Intended Use</label>
                        @Html.DropDownListFor(x => x.SearchEntity.IntendedUseCode, Model.IntendedUseCodes, "All", new { @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        <label>Status</label>
                        @Html.DropDownListFor(x => x.SearchEntity.StatusCode, Model.Statuses, "All", new { @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        <div class="form-group form-horizontal">
                            <label>Owned By</label>
                            @Html.DropDownListFor(x => x.SearchEntity.OwnedByWebUserID, Model.Cooperators, "All committee members", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-1">
                        <label>Locked</label>
                        @Html.DropDownListFor(x => x.SearchEntity.IsLocked, Model.YesNoOptions, "Either", new { @class = "form-control" })
                    </div>
                </div>
                <div>
                    <button id="btnReset" type="button" class="btn btn-default">Reset</button>
                    <div class="btn-group float-right">
                        <button type="submit" class="btn btn-default">Search</button>
                        <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" role="menu" style="">
                            <a id="btnOpenSaveSearchModalh" class="dropdown-item" href="#">Save Search</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="timeline">
                <div class="row">
                    <div class="col-md-12">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
