@model USDA.ARS.GRIN.GGTools.ViewModelLayer.SysFolderViewModel

<div class="row">
    <div class="col-md-3">

        <div class="info-box shadow">
            <span class="info-box-icon bg-info">
                <i class="far fa-folder"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">
                    
                    <a href="@Url.Action("Edit", "SysFolder", new { @entityId = Model.Entity.ID })">
                        @Model.Entity.Title
                    </a>
                </span>
                <span class="info-box-number">
                    Created @Model.Entity.CreatedDate.ToShortDateString()
                    @*<button id="btnDeleteItemByEntityID" type="button" data-ggtools-action="AppUserItemFolder" data-ggtools-value="DeleteItemByEntityID" data-ggtools-id=@Model.Entity.ID class="btn btn-sm btn-flat btn-danger float-right">Remove</button>*@
                </span>
            </div>
        </div>


    </div>
</div>
