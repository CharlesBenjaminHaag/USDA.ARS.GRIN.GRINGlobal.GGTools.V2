@model USDA.ARS.GRIN.GGTools.ViewModelLayer.SysFolderViewModel

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Folders (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div id="section-search-results">
            <table id="data_table_sys_folder" class="table table-striped folder-table" style="width:100%;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Created</th>
                        <th>By</th>
                        <th>Modified</th>
                        <th>By</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var folder in Model.DataCollection)
                    {
                        <tr>
                            <td>
                                @folder.ID
                            </td>
                            <td>
                                @folder.Title
                            </td>
                            <td>@folder.Description</td>
                            <td>@folder.CreatedDate.ToShortDateString()</td>
                            <td>@folder.CreatedByCooperatorName</td>
                            <td>
                                @if (folder.ModifiedDate > DateTime.MinValue)
                                {
                                    @folder.ModifiedDate.ToShortDateString()
                                }
                            </td>
                            <td>@folder.ModifiedByCooperatorName</td>
                            <td style="text-align:right;">
                                <a href="@Url.Action("Edit", "SysFolder", new { entityId = folder.ID })" class="btn btn-default btn-sm pull-right row-edit">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



