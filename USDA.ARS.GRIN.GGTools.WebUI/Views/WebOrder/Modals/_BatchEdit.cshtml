@model USDA.ARS.GRIN.GGTools.ViewModelLayer.WebOrderRequestViewModel
<div class="modal fade" id="modal-web-order-batch-edit">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 id="lblBatchEditModalTitle" class="modal-title">Cancel Orders</h4>
            </div>
            <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Assigned To</label>
                            @Html.DropDownListFor(x => x.AssignedWebUserID, Model.Cooperators, new {@class="form-control" })
                        </div>
                        <div class="col-md-6">
                            <label>Status</label>
                            <select id="ddlSelectStatusCode" class="form-control">
                                <option value="CANCELED">Canceled</option>
                            </select>
                        </div>
                    </div>
                    <div class="row" style="margin-top:15px;">
                        <div class="col-md-12">
                            <label>Note</label><textarea class="form-control"></textarea>
                            <div class="input-group" style="margin-top:15px;">
                                <input type="text" disabled="" readonly class="form-control" value="Send email to requestor(s)">
                                <span class="input-group-addon">
                                    <input id="cbxRejectEmailRequestor" type="checkbox" checked="checked">
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Close</button>
                <button id="btnSaveBatchEdits" type="button" class="btn btn-primary pull-right" data-dismiss="modal">Continue</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


