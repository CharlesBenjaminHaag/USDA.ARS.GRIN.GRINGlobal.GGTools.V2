@model USDA.ARS.GRIN.GGTools.ViewModelLayer.WebOrderRequestViewModel
<div class="modal fade" id="modal-email-curators">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Contact Curators</h4>
            </div>
            <div class="modal-body">
                <div class="box-body">
                    <div class="form-group">
                        <label>To</label>
                        <input id="txtEmailCuratorsTo" class="form-control" type="text" placeholder="To" value=" @Model.Entity.EmailAddressList">
                    </div>
                    <div class="form-group">
                        <label>From</label>
                        <input id="txtEmailCuratorsFrom" class="form-control" type="text" placeholder="To" value="@Model.DataCollectionEmailTemplates.Where(x =>x.CategoryCode=="CUR").First().EmailFrom">
                    </div>
                    <div class="form-group">
                        <label>Subject</label>
                        <input id="txtEmailCuratorsSubject" class="form-control" type="text" placeholder="Subject" value="Curator Email">
                    </div>
                    <div class="form-group">
                        <label>Body</label>
                        <textarea id="txtEmailCuratorsBody" class="form-control" rows="10">
                            @Model.DataCollectionEmailTemplates.Where(x =>x.CategoryCode=="CUR").First().Body
                        </textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="button" id="btnSubmitEmailCurators" class="btn btn-primary" data-dismiss="modal">Send Email</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
