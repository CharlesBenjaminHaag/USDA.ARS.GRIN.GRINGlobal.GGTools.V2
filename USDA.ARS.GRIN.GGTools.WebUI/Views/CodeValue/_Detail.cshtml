@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CodeValueViewModelBase

<div class="card">
    <div class="card-header p-2">
        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Search Criteria</a></li>
            <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="activity">
                <div id="section-search-criteria">
                    @using (Html.BeginForm("Search", "CodeValue", FormMethod.Post, new { id = "frmMain" }))
                    {
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group form-horizontal">
                                    <label>Group</label>
                                    @Html.DropDownListFor(x => x.SearchEntity.GroupName, Model.Groups, "Any Groups", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group form-horizontal">
                                    <label>Code</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.Value, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group form-horizontal">
                                    <label>Title</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.Title, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group form-horizontal">
                                    <label>Description</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.Description, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div>
                    <button id="btnReset" type="button" class="btn btn-default">Reset</button>
                    <div class="btn-group float-right">
                        <button type="submit" class="btn btn-default">Search</button>
                        <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" role="menu" style="">
                            <a id="btnOpenDynamicFolderModal" class="dropdown-item" href="#">Save Search</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="timeline">
                <div class="row">
                    <div class="col-md-12">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

