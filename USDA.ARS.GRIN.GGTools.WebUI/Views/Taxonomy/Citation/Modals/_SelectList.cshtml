@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CitationViewModelBase
<br />
<div class="row">
    <div class="col-md-12">
        <div class="btn-group float-right">
            <button 
                id="btnSaveSelectedCitationTop" 
                type="button" 
                class="btn btn-default float-right" data-dismiss="modal">Use Selected Citation</button>
        </div>
    </div>
</div>
<br />
<table id="data_table_lookup_citations" class="table table-striped" style="margin-top:25px; width:100%;">
    <thead>
        <tr>
            <th></th>
            <th width="5%">ID</th>
            <th>Type</th>
            <th>Author(s) Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataCollection != null)
        {
            if (Model.DataCollection.Count() > 0)
            {
                foreach (var result in Model.DataCollection)
                {
                    <tr>
                        <td>@result.ID</td>
                        <td>
                            @result.ID
                        </td>
                        <td>
                            @result.TypeCode
                        </td>
                        <td>
                            @Html.Raw(result.AssembledName)
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="btn-group float-right">
            <button id="btnSaveSelectedCitation" type="button" class="btn btn-default float-right" data-dismiss="modal">Use Selected Citation</button>
        </div>
    </div>
</div>
