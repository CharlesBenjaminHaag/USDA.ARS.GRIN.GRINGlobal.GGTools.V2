@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CitationViewModelBase
<table id="data_table_lookup_citations" class="table table-striped" style="width:100%;">
    <thead>
        <tr>
            <th></th>
            <th>Species</th>
            <th>Abbreviation</th>
            <th>Text</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataCollection != null)
        {
            if (Model.DataCollection.Count() > 0)
            {
                foreach (var result in Model.DataCollection)
                {
                    <tr>
                        <td>@result.ID</td>
                        <td>@Html.Raw(result.SpeciesName)</td>
                        <td>@result.Abbreviation</td>
                        <td>
                            @Html.Raw(result.AssembledName)
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="btn-group float-right">
            <button id="btnSaveSelectedCitation" type="button" class="btn btn-default float-right" data-dismiss="modal">Use Selected Citation</button>
        </div>
    </div>
</div>
<script type="text/javascript">
    InitDataTableSingleSelect('data_table_lookup_citations');
</script>
