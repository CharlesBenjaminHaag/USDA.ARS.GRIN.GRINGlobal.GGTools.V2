@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CitationViewModelBase
<div id="section-search-criteria">
    @using (Html.BeginForm("Search", "Citation", FormMethod.Post, new { id = "frmMain" }))
    {
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Type</label>
                @Html.DropDownListFor(x => x.SearchEntity.TypeCode, Model.CitationTypes, "All types", new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Abbreviation</label>
                @Html.TextBoxFor(x => x.SearchEntity.Abbreviation, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Citation Title</label>
                @Html.TextBoxFor(x => x.SearchEntity.CitationTitle, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Author</label>
                @Html.TextBoxFor(x => x.SearchEntity.AuthorName, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group form-horizontal">
                <label>Family Name</label>
                @Html.TextBoxFor(x => x.SearchEntity.FamilyName, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group form-horizontal">
                <label>Genus Name</label>
                @Html.TextBoxFor(x => x.SearchEntity.GenusName, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group form-horizontal">
                <label>Species Name</label>
                @Html.TextBoxFor(x => x.SearchEntity.SpeciesName, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-1">
            <div id="form-group form-group-horizontal">
                <label>Cit. Year</label>
                @Html.TextBoxFor(x => x.SearchEntity.CitationYear, new { @class = "form-control" })
            </div>
        </div>
    </div>
        <br />
        @Html.Partial("~/Views/Taxonomy/Citation/_DetailExtended.cshtml")
    }
</div>
<div>
    <button id="btnReset" type="button" class="btn btn-default">Reset</button>
    <div class="btn-group float-right">
        <button type="submit" class="btn btn-default">Search</button>
        <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
            <span class="sr-only">Toggle Dropdown</span>
        </button>
        <div class="dropdown-menu" role="menu" style="">
            <a id="btnOpenDynamicFolderModal" class="dropdown-item" href="#">Save Search</a>
        </div>
    </div>
</div>
            

