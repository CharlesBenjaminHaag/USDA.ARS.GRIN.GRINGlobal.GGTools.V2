@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CitationViewModel
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Citations (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div id="section-search-results" class="data-list">
            <table id="data_table_citation" class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th width="5%">ID</th>
                        <th>Species Name</th>
                        <th>Citation Title</th>
                        <th>Abbreviation</th>
                        <th>Created</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var result in Model.DataCollection)
                    {
                    <tr>
                        <td>
                            @result.ID
                        </td>
                        <td>
                            @result.ID
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Species", new { entityId = result.SpeciesID })">
                                @Html.Raw(result.SpeciesName)
                            </a>
                        </td>
                        <td>
                            @Html.Raw(result.CitationTitle)
                        </td>
                        <td>
                            @result.Abbreviation
                        </td>
                        <td>
                            @result.CreatedDate.ToShortDateString()
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Citation", new { entityId = result.ID })" class="btn btn-default btn-sm float-right row-edit">
                                <i class="fa fa-edit"></i>
                            </a>
                            @if (Model.EventAction == "FOLDER")
                            {
                                <a href="@Url.Action("DeleteItem", "AppUserItemFolder", new { @folderId = result.FolderID, @sysFolderItemMapId = result.SysFolderItemMapId })"
                                   class="btn btn-danger btn-sm float-right row-edit margin-r-5">
                                    <i class="fa fa-trash"></i>
                                </a>
                            }
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTable("data_table_citation");
    });
</script>
