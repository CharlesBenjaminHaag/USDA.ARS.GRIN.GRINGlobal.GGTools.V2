@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.FamilyViewModel
<table id="data-table-family-lookup" class="table table-striped ggtools-table" style=" width:100%;">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>ID</th>
            <th>Name</th>
            <th>Accepted</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataCollection.Count() > 0)
        {
            foreach (var result in Model.DataCollection)
            {
                <tr>
                    <td>@result.ID</td>
                    <td>@result.FamilyName</td>
                    <td>@result.ID</td>
                    <td>@Html.Raw(result.AssembledName)</td>
                    <td>@Html.Raw(Model.FormatBoolean(result.IsAcceptedName))</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">
                    <div class="callout callout-info" style="vertical-align:middle; margin-top:5px;">
                        Your search returned no matches.
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
