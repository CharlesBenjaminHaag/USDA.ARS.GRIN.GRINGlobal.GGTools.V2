@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.FamilyViewModelBase


<div id="section-folder-confirmation"></div>
<div class="card card-primary card-tabs">
    <div class="card-header p-0 pt-1">
        <ul class="nav nav-tabs" id="custom-tabs-one-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="custom-tabs-one-home-tab" data-toggle="pill" href="#custom-tabs-one-home" role="tab" aria-controls="custom-tabs-one-home" aria-selected="true">
                    <i class="nav-icon fas fa-search"></i>
                    Search Criteria
                </a>
                
            </li>
            <li class="nav-item">
                <a class="nav-link" id="custom-tabs-one-profile-tab" data-toggle="pill" href="#custom-tabs-one-profile" role="tab" aria-controls="custom-tabs-one-profile" aria-selected="false">
                    <i class="nav-icon fas fa-save"></i>
                    Saved Searches
                </a>
            </li>

        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="section-search-criteria">
            <div class="tab-pane fade show active" id="custom-tabs-one-home" role="tabpanel" aria-labelledby="custom-tabs-one-home-tab">
                @using (Html.BeginForm("Search", "Family", FormMethod.Post, new { id = "frmMain" }))
                {
                    @Html.HiddenFor(x => x.EventAction)
                    @Html.HiddenFor(x => x.EventValue)
                    @Html.HiddenFor(x => x.TableName)
                    @Html.HiddenFor(x => x.TableCode)
                    @Html.HiddenFor(x => x.PageTitle)
                    @Html.HiddenFor(x => x.AuthenticatedUserCooperatorID)
                    @Html.HiddenFor(x => x.ItemIDList)
                    <div class="row">
                        <div class="col-md-12">
                            <div class="tab-pane active" id="section-family">
                                <div class="row">
                                    @Html.Partial("~/Views/Components/_ShowHideButtons.cshtml")
                                    <div class="col-md-3">
                                        <div id="section-family-name" class="form-group form-horizontal">
                                            <label>Family Name</label>
                                            @Html.TextBoxFor(x => x.SearchEntity.FamilyName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <label>Accepted</label>
                                        @Html.DropDownListFor(x => x.SearchEntity.IsAcceptedName, Model.YesNoOptions, "Either", new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-4">
                                        <div id="section-family-name" class="form-group form-horizontal">
                                            <label>Order</label>
                                            @Html.TextBoxFor(x => x.SearchEntity.ClassificationName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div id="section-family-type" class="form-group form-horizontal">
                                            <label>Type</label>
                                            @Html.DropDownListFor(x => x.SearchEntity.FamilyTypeCode, Model.FamilyTypes, "All Types", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div id="section-family-type" class="form-group form-horizontal">
                                            <label>Suprafamily Rank Name</label>
                                            @Html.TextBoxFor(x => x.SearchEntity.SuprafamilyRankName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div id="section-family-type" class="form-group form-horizontal">
                                            <label>Suprafamily Rank Code</label>
                                            @Html.TextBoxFor(x => x.SearchEntity.SuprafamilyRankCode, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div id="section-family-name" class="form-group form-horizontal">
                                            <label>Subfamily Name</label>
                                            @Html.TextBoxFor(x => x.SearchEntity.SubfamilyName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div id="section-family-name" class="form-group form-horizontal">
                                            <label>Tribe Name</label>
                                            @Html.TextBoxFor(x => x.SearchEntity.TribeName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div id="section-family-name" class="form-group form-horizontal">
                                            <label>Subtribe Name</label>
                                            @Html.TextBoxFor(x => x.SearchEntity.SubtribeName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div id="section-family-name" class="form-group form-horizontal">
                                            <label>Type Genus</label>
                                            @Html.TextBoxFor(x => x.SearchEntity.TypeGenusName, new { @class = "form-control" })
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    @Html.Partial("~/Views/Taxonomy/Family/_DetailExtended.cshtml")


                    <div>
                        <button id="btnReset" type="button" class="btn btn-default">Reset</button>
                        <div class="btn-group float-right">
                            <button type="submit" class="btn btn-default"> Search</button>
                            <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu" role="menu" style="">
                                <a id="btnOpenDynamicFolderModal" class="dropdown-item" href="#">Save Search</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="tab-pane fade" id="custom-tabs-one-profile" role="tabpanel" aria-labelledby="custom-tabs-one-profile-tab">
                <div class="row">
                    <div class="col-md-12">
                     </div>
                </div>
            </div>
        </div>
    </div>
</div>

