@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.AuthorViewModelBase
<div id="section-folder-confirmation"></div>

@using (Html.BeginForm("Search", "Author", FormMethod.Post, new { id = "frmMain" }))
{
    @Html.HiddenFor(x => x.EventAction)
    @Html.HiddenFor(x => x.EventValue)
    @Html.HiddenFor(x => x.EventInfo)
    @Html.HiddenFor(x => x.EventNote)
    @Html.HiddenFor(x => x.TableName)
    @Html.HiddenFor(x => x.TableCode)
    @Html.HiddenFor(x => x.PageTitle)
    @Html.HiddenFor(x => x.AuthenticatedUserCooperatorID)
    @Html.HiddenFor(x => x.ItemIDList)

    <div id="section-panel-help" class="alert alert-info alert-dismissible" style="display: none;">
        <button type="button" class="close" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-info"></i> Text Search</h5>
        <ul>
            <li>
                By default, text search fields will use leading and trailing wildcard characters, and will match all records that contain the entered text.
            </li>
            <li>
                To search more precisely, enter wildcard characters (<strong>%</strong>) within the search text.
            </li>
        </ul>
    </div>
    <div class="card card-primary card-tabs">
        <div class="card-header p-0 pt-1">
            <ul class="nav nav-tabs" id="custom-tabs-one-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="custom-tabs-one-home-tab" data-toggle="pill" href="#custom-tabs-one-home" role="tab" aria-controls="custom-tabs-one-home" aria-selected="true">Search Criteria</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="custom-tabs-one-profile-tab" data-toggle="pill" href="#custom-tabs-one-profile" role="tab" aria-controls="custom-tabs-one-profile" aria-selected="false">Saved Searches</a>
                </li>

            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content" id="custom-tabs-one-tabContent">
                <div class="tab-pane fade show active" id="custom-tabs-one-home" role="tabpanel" aria-labelledby="custom-tabs-one-home-tab">
                    <div id="section-search-criteria" class="row">
                        @Html.Partial("~/Views/Components/_ShowHideButtons.cshtml")
                        <div class="col-md-4">
                            <label>Short Name</label>
                            <div class="input-group">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        @Html.CheckBoxFor(x => x.SearchEntity.IsShortNameExactMatchOption, new { id = "cbxAuthorLookupIsExactMatch" })
                                        &nbsp;Exact Match
                                    </span>
                                </div>
                                @Html.TextBoxFor(x => x.SearchEntity.ShortName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Full Name
                                    &nbsp;<i class="fas fa-info-circle" style="color:#17a2b8;"></i>
                                </label>
                                @Html.TextBoxFor(x => x.SearchEntity.FullName, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    @Html.Partial("~/Views/Taxonomy/Author/_DetailExtended.cshtml")
                    <div>
                        <button id="btnReset" type="button" class="btn btn-default">Reset</button>
                        <div class="btn-group float-right">
                            <button type="submit" class="btn btn-default"> Search</button>
                            <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu" role="menu" style="">
                                <a id="btnOpenDynamicFolderModal" class="dropdown-item" href="#">Save Search</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="custom-tabs-one-profile" role="tabpanel" aria-labelledby="custom-tabs-one-profile-tab">
                    <div class="row">
                        <div class="col-md-12">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<script type="text/javascript">
    $(".fa-info-circle").on('click', function (event) {
        event.stopPropagation();
        event.stopImmediatePropagation();
        /*alert("CLICK");*/
        if ($("#section-panel-help").is(":visible")) {
            //
        } else {
            $("#section-panel-help").show();
        }
    });

    $(".close").on('click', function (event) {
        $("#section-panel-help").hide();
    });
</script>
