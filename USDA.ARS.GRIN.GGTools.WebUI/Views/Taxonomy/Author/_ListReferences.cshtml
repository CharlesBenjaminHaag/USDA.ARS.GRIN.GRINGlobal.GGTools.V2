@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.AuthorViewModel

@{ 
    string pageTitle = "";
    pageTitle = "References (" + @Model.DataCollectionReferences.Count + ")";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">@pageTitle</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="card-body">
        <table id="data_table_taxonomy_author" class="table table-striped ggtools">
            <thead>
                <tr>
                    <th></th>
                    <th>Table Title</th>
                    <th>Field Name</th>
                    <th>Taxon ID</th>
                    <th>Taxon Name</th>
                    <th>Taxon Authority</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model.DataCollectionReferences)
                {
                <tr>
                    <td>@result.TableName</td>
                    <td>@result.TableTitle</td>
                    <td>@result.FieldTitle</td>
                    <td>@result.TaxonID</td>
                    <td>@Html.Raw(result.TaxonAssembledName)</td>
                    <td>@Html.Raw(result.TaxonAuthority)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTable("data_table_taxonomy_author");
    });
</script>
