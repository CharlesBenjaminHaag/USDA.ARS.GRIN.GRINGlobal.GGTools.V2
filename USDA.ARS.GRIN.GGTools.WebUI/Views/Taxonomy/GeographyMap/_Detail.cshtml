@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.GeographyMapViewModelBase
<div id="section-folder-confirmation"></div>
@using (Html.BeginForm("Search", "GeographyMap", FormMethod.Post, new { id = "frmMain" }))
{
    @Html.HiddenFor(x => x.EventAction)
    @Html.HiddenFor(x => x.EventValue)
    @Html.HiddenFor(x => x.TableCode)
    @Html.HiddenFor(x => x.TableName)
    @Html.HiddenFor(x => x.PageTitle)
    @Html.HiddenFor(x => x.AuthenticatedUserCooperatorID)
    @Html.HiddenFor(x => x.ItemIDList)
    <div class="card">
        <div class="card-header p-2">
            <ul class="nav nav-pills">
                <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Search Criteria</a></li>
                <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane active" id="activity">
                    <div id="section-search-criteria">
                        <div class="row">
                            @Html.Partial("~/Views/Components/_ShowHideButtons.cshtml")
                            <div class="col-md-3">
                                <div class="form-group form-horizontal">
                                    <label>Assembled Name</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.GeographyDescription, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group form-horizontal">
                                    <label>Admin 1</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.Admin1, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group form-horizontal">
                                    <label>Species Name</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.SpeciesName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group form-horizontal">
                                    <label>Citation</label>
                                    @Html.DropDownListFor(x => x.SearchEntity.IsCited, Model.YesNoOptions, "Either", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group form-horizontal">
                                    <label>Country</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.CountryName, new { @class = "form-control" })
                                    @*@Html.DropDownListFor(x => x.SearchEntity.CountryCode, Model.Countries, "All countries", new { @class = "form-control" })*@
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group form-horizontal">
                                    <label>Note</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.Note, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group form-horizontal">
                                    <label>Geography Status</label>
                                    @Html.DropDownListFor(x => x.SearchEntity.GeographyStatusCode, Model.GeographyStatusCodes, "All Statuses", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group clearfix" style="margin-top:40px;">
                                    <div class="icheck-primary d-inline">
                                        @Html.CheckBoxFor(x => x.SearchEntity.IsValidOption, new { @id = "checkboxPrimary1" })
                                        <label for="checkboxPrimary1">
                                            Search Valid Countries Only
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @Html.Partial("~/Views/Taxonomy/GeographyMap/_DetailExtended.cshtml")
                    </div>
                    <div>
                        <button id="btnReset" type="button" class="btn btn-default">Reset</button>
                        <div class="btn-group float-right">
                            <button id="btnSearch" type="submit" class="btn btn-default">Search</button>
                            <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu" role="menu" style="">
                                <a id="btnOpenDynamicFolderModal" class="dropdown-item" href="#">Save Search</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="timeline">
                    <div class="row">
                        <div class="col-md-12">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}