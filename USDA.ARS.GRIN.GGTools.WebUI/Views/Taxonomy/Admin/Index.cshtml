@model USDA.ARS.GRIN.GGTools.ViewModelLayer.SysUserViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminLTE3.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <div class="card bg-light d-flex flex-fill">
            <div class="card-header text-muted border-bottom-0">
                @Model.Entity.JobTitle
            </div>
            <div class="card-body pt-0">
                <div class="row">
                    <div class="col-7">
                        <h2 class="lead">
                            <a href="@Url.Action("Edit", "Cooperator", new { @entityId = Model.Entity.CooperatorID })">
                                <b>@Model.Entity.FullName</b>
                            </a>
                        </h2>
                        <p class="text-muted text-sm"><b>Site: </b> @Model.Entity.SiteLongName (@Model.Entity.SiteShortName) </p>
                        <ul class="ml-4 mb-0 fa-ul text-muted">
                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address: @Model.Entity.Address</li>
                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span> Email: @Model.Entity.EmailAddress</li>
                        </ul>
                    </div>
                    <div class="col-5 text-center">
                        <img src="~/dist/img/user-default.png" alt="user-avatar" class="img-circle img-fluid">
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="text-right">
                    <button id="btnDelete" data-ggtools-action="DELETE" data-ggtools-value="@Model.Entity.ID" class="btn btn-sm bg-danger">
                        <i class="fas fa-trash"></i>
                    </button>
                    <a href="@Url.Action("Admin", "Taxonomy", new { @sysUserId = Model.Entity.ID })" class="btn btn-sm btn-primary">
                        <i class="fas fa-user"></i> Edit User Access
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
         @{Html.RenderAction("_List", "SysGroup");}
    </div>
</div>
