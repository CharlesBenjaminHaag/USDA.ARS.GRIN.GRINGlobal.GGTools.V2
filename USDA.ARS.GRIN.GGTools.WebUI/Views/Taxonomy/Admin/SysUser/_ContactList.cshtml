@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CooperatorViewModel
<div class="row">
    @foreach (var result in Model.DataCollection)
    {
        <div class="col-md-4">
            <div class="card bg-light d-flex flex-fill">
                <div class="card-header text-muted border-bottom-0">
                    @result.JobTitle
                </div>
                <div class="card-body pt-0">
                    <div class="row">
                        <div class="col-7">
                            <h2 class="lead"><b>@result.FullName</b></h2>
                            <p class="text-muted text-sm"><b>Site: </b> @result.SiteName </p>
                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address: @result.AddressLine1 @result.City @result.StateName @result.PostalIndex</li>
                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Email: @result.EmailAddress</li>
                            </ul>
                        </div>
                        <div class="col-5 text-center">
                            <img src="~/dist/img/user-default.png" alt="user-avatar" class="img-circle img-fluid">
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-right">
                        <a href="#" class="btn btn-sm bg-teal">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Edit","Cooperator", new { @entityId = result.ID })" class="btn btn-sm btn-primary">
                            <i class="fas fa-user"></i> View Detail
                        </a>
                    </div>
                </div>
            </div>

        </div>
    }
</div>



