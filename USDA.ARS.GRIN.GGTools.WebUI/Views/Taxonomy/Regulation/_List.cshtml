@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.RegulationViewModel

<div id="section-search-results" class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Regulations (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <table id="data_table_taxonomy_regulation" class="table table-striped" style=" width:100%;">
            <thead>
                <tr>
                    <th width="5%">ID</th>
                    <th>Geography</th>
                    <th>Type</th>
                    <th>Level</th>
                    <th>Description</th>
                    <th>Last Modified</th>
                    <th>Modified By</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model.DataCollection)
                {
                    <tr>
                        <td>
                            @result.ID
                        </td>
                        <td>@result.GeographyDescription</td>
                        <td>@result.RegulationTypeDescription</td>
                        <td>@result.RegulationLevelDescription</td>
                        <td>@result.Description</td>
                        <td>
                            @if (result.ModifiedDate > DateTime.MinValue)
                            {
                                @result.ModifiedDate.ToShortDateString()
                            }
                        </td>
                        <td>
                            @result.ModifiedByCooperatorName
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Regulation", new { entityId = result.ID })" class="btn btn-default btn-sm float-right row-edit">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
