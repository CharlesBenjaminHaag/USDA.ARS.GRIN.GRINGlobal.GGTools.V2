@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.SpeciesViewModel
<div id="section-search-results" class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Species (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <table id="data_table_taxonomy_species" class="table table-striped ggtools-table">
            <thead>
                <tr>
                    <th></th>
                    <th width="5%">ID</th>
                    <th>Name</th>
                    <th>Accepted</th>
                    <th>Protologue</th>
                    <th>Verified</th>
                    <th>By</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.DataCollection.Count() > 0)
                {
                    foreach (var result in Model.DataCollection)
                    {
                        <tr>
                            <td>
                                @result.ID
                            </td>
                            <td>
                                @result.ID
                            </td>
                            <td>@Html.Raw(result.FullName)</td>
                            <td>@Html.Raw(Model.FormatBoolean(result.IsAcceptedName))</td>
                            <td>
                                @Html.Raw(result.Protologue)
                            </td>
                            <td>
                                @if (result.NameVerifiedDate > DateTime.MinValue)
                                {
                                    @result.NameVerifiedDate.ToShortDateString()
                                }
                            </td>
                            <td>
                                @result.VerifiedByCooperatorName
                            </td>
                            <td class="table-col-align-right">
                                <a href="@Url.Action("Edit", "Species", new { entityId = result.ID })" class="btn btn-default btn-sm pull-right row-edit">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div> 
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTable("data_table_taxonomy_species");
    });
</script>
        