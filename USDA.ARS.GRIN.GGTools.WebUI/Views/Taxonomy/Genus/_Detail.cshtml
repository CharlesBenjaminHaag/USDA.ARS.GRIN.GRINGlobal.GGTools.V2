@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.GenusViewModel
<div id="section-folder-confirmation"></div>
@using (Html.BeginForm("Search", "Genus", FormMethod.Post, new { id = "frmMain" }))
{
    @Html.HiddenFor(x => x.EventAction)
    @Html.HiddenFor(x => x.EventValue)
    @Html.HiddenFor(x => x.EventInfo)
    @Html.HiddenFor(x => x.EventNote)
    @Html.HiddenFor(x => x.TableName)
    @Html.HiddenFor(x => x.TableCode)
    @Html.HiddenFor(x => x.AuthenticatedUserCooperatorID)
    @Html.HiddenFor(x => x.ItemIDList)
    <div class="card">
        <div class="card-header p-2">
            <ul class="nav nav-pills">
                <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Search Criteria</a></li>
                <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane active" id="activity">
                    <div id="section-search-criteria">
                        <div class="row">
                            @Html.Partial("~/Views/Components/_ShowHideButtons.cshtml")
                            <div class="col-md-3">
                                <div class="form-group form-horizontal">
                                    <label>Family</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.FamilyName, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group form-horizontal">
                                    <label>Name</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.Name, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-1">
                                <label>Accepted</label>
                                @Html.DropDownListFor(x => x.SearchEntity.IsAcceptedName, Model.YesNoOptions, "Either", new { @class = "form-control" })
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Qualifying Code</label>
                                    @Html.DropDownListFor(x => x.SearchEntity.QualifyingCode, Model.QualifyingCodes, "All codes", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Hybrid Code</label>
                                    @Html.DropDownListFor(x => x.SearchEntity.HybridCode, Model.HybridCodes, "All codes", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        @Html.Partial("~/Views/Taxonomy/Genus/_DetailExtended.cshtml")
                    </div>
                    <div>
                        <button id="btnReset" type="button" class="btn btn-default">Reset</button>
                        <div class="btn-group float-right">
                            <button id="btnSearch" type="submit" class="btn btn-default">Search</button>
                            <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu" role="menu" style="">
                                <a id="btnOpenDynamicFolderModal" class="dropdown-item" href="#">Save Search</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="timeline">
                    <div class="row">
                        <div class="col-md-12">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

