@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.GeographyViewModelBase
<div id="section-folder-confirmation"></div>
@using (Html.BeginForm("Search", "Geography", FormMethod.Post, new { id = "frmMain" }))
{
    @Html.HiddenFor(x => x.EventAction)
    @Html.HiddenFor(x => x.EventValue)
    @Html.HiddenFor(x => x.TableName)
    @Html.HiddenFor(x => x.TableCode)
    @Html.HiddenFor(x => x.PageTitle)
    @Html.HiddenFor(x => x.AuthenticatedUserCooperatorID)
    @Html.HiddenFor(x => x.ItemIDList)

    <div class="card">
        <div class="card-header p-2">
            <ul class="nav nav-pills">
                <li class="nav-item"><a class="nav-link active" href="#section-search-criteria" data-toggle="tab">Search Criteria</a></li>
                <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane active" id="section-search-criteria">
                    <div class="row">
                        @Html.Partial("~/Views/Components/_ShowHideButtons.cshtml")
                        <div class="col-md-3">
                            <div class="form-group form-horizontal">
                                <label>Continent</label>
                                @Html.TextBoxFor(x => x.SearchEntity.ContinentName, new { @class = "form-control" })
                                @*@Html.DropDownListFor(x => x.SearchEntity.ContinentRegionID, Model.Continents, "All continents", new { @class = "form-control" })*@
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group form-horizontal">
                                <label>Subcontinent</label>
                                @Html.TextBoxFor(x => x.SearchEntity.SubContinentName, new { @class = "form-control" })
                                @*@Html.DropDownListFor(x => x.SearchEntity.SubContinentRegionID, Model.SubContinents, "All subcontinents", new { @class = "form-control" })*@
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group form-horizontal">
                                <label>Country</label>
                                @Html.TextBoxFor(x => x.SearchEntity.CountryDescription, new { @class = "form-control" })
                                @*@Html.DropDownListFor(x => x.SearchEntity.CountryCode, Model.Countries, "All countries", new { @class = "form-control" })*@
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="form-group form-horizontal">
                                <label>Valid</label>
                                @Html.DropDownListFor(x => x.SearchEntity.IsValid, Model.YesNoOptions, "Either", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="form-group form-horizontal">
                                <label>Has Region</label>
                                @Html.DropDownListFor(x => x.SearchEntity.IsRegionMapped, Model.YesNoOptions, "Either", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    @Html.Partial("~/Views/Taxonomy/Geography/_DetailExtended.cshtml")
                    <div>
                        <button id="btnReset" type="button" class="btn btn-default">Reset</button>
                        <div class="btn-group float-right">
                            <button id="btnSearch" type="submit" class="btn btn-default">Search</button>
                            <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu" role="menu" style="">
                                <a id="btnOpenDynamicFolderModal" class="dropdown-item" href="#">Save Search</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="timeline">
                    <div class="row">
                        <div class="col-md-12">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}







