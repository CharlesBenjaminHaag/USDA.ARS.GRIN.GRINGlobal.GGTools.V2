@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.GeographyViewModel
<input type="hidden" id="hf_current_filter_web_order_request_status" />
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-filter"></i>
            Continents
        </h3>
    </div>
    <div class="card-body scroll-container-level1">
        <div id="section-geography-continent" class="continent">
            @foreach (var result in Model.DataCollectionContinents)
            {
                <label class="button-checkbox-level1">
                    <input 
                        id="filter-geography-continent" 
                        type="checkbox" 
                        class="continent-selector"
                        data-ggtools-geography-id="@result.ID"
                        data-ggtools-geography-text="@result.RegionText"
                        data-ggtools-is-continent="@result.IsContinent"/>
                    <span>@result.Continent</span>
                </label>
            }
        </div>
    </div>
</div>
<script type="text/javascript">


</script>