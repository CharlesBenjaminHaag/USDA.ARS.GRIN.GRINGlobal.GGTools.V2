@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CWRMapViewModelBase
<div id="section-folder-confirmation"></div>
@using (Html.BeginForm("Search", "CWRMap", FormMethod.Post, new { id = "frmMain" }))
{
    @Html.HiddenFor(x => x.EventAction)
    @Html.HiddenFor(x => x.EventValue)
    @Html.HiddenFor(x => x.TableName)
    @Html.HiddenFor(x => x.TableCode)
    @Html.HiddenFor(x => x.PageTitle)
    @Html.HiddenFor(x => x.AuthenticatedUserCooperatorID)
    @Html.HiddenFor(x => x.ItemIDList)
    <div class="card">
        <div class="card-header p-2">
            <ul class="nav nav-pills">
                <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Search Criteria</a></li>
                <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
            </ul>
        </div>
        <div class="card-body" id="section-search-criteria">
            <div class="tab-content">
                <div class="tab-pane active" id="activity">
                    <div class="row">
                        @Html.Partial("~/Views/Components/_ShowHideButtons.cshtml")
                        <div class="col-md-3">
                            <label>Crop For CWR Name</label>
                            @Html.TextBoxFor(x => x.SearchEntity.CropForCWRName, new { @class = "form-control" })
                        </div>
                        <div class="col-md-3">
                            <label>Species Name</label>
                            @Html.TextBoxFor(x => x.SearchEntity.SpeciesName, new { @class = "form-control" })
                        </div>
                        <div class="col-md-3">
                            <div class="form-group form-horizontal">
                                <label>Crop Common Name</label>
                                @Html.TextBoxFor(x => x.SearchEntity.CropCommonName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group form-horizontal">
                                <label>Genepool Code</label>
                                @Html.DropDownListFor(x => x.SearchEntity.GenepoolCode, Model.GenepoolCodes, "All Genepool Codes", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group form-horizontal">
                                <label>Is Crop</label>
                                @Html.DropDownListFor(x => x.SearchEntity.IsCrop, Model.IsCropOptions, "Either", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group form-horizontal">
                                <label>Is Graftstock</label>
                                @Html.DropDownListFor(x => x.SearchEntity.IsGraftStock, Model.IsGraftStockOptions, "Either", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group form-horizontal">
                                <label>Is Potential</label>
                                @Html.DropDownListFor(x => x.SearchEntity.IsPotential, Model.IsGraftStockOptions, "Either", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group form-horizontal">
                                <label>Note</label>
                                @Html.TextBoxFor(x => x.SearchEntity.Note, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    @Html.Partial("~/Views/Taxonomy/CWRMap/_DetailExtended.cshtml")
                    <div>
                        <button id="btnReset" type="button" class="btn btn-default">Reset</button>
                        <div class="btn-group float-right">
                            <button id="btnSearch" type="submit" class="btn btn-default">Search</button>
                            <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu" role="menu" style="">
                                <a id="btnOpenDynamicFolderModal" class="dropdown-item" href="#">Save Search</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="timeline">
                    <div class="row">
                        <div class="col-md-12">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


































