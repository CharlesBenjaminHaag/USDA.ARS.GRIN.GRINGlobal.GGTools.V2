@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.SpeciesViewModel
<table id="data-table-species-lookup" class="table table-striped ggtools" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>ID</th>
            <th>Name</th>
            <th>Accepted</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataCollection.Count() > 0)
        {
            foreach (var result in Model.DataCollection)
            {
        <tr>
            <td>@result.ID</td>

            <td>@result.Name</td>
            <td>
                @{
                    var cbxId = "cbx-species-" + result.ID;
                }
                <input id="toast-container" hidden="@cbxId" type="checkbox" />
            </td>

            <td>@result.ID</td>
            <td>@Html.Raw(result.AssembledName)</td>
            <td>@Html.Raw(Model.FormatBoolean(result.IsAcceptedName))</td>
        </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">
                    <div class="callout callout-info" style="vertical-align:middle; margin-top:5px;">
                        Your search returned no matches.
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        
    });
</script>