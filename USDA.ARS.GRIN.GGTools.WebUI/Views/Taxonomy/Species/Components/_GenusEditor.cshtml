@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.SpeciesViewModel
<div class="form-group">
    <label>Genus</label>
    <div class="input-group">
        <span id="Entity_GenusName-Placeholder" class="placeholder"  style="background-color: #ecf0f5; border: 1px solid #ced4da; width: 100%; position: relative; -ms-flex: 1 1 auto; flex: 1 1 auto; min-width: 0; margin-bottom: 0; padding: 0.375rem 0.75rem; height: calc(2.25rem + 2px); position: relative; -ms-flex: 1 1 auto; flex: 1 1 auto; width: 1%; min-width: 0; margin-bottom: 0;">@Html.Raw(Model.Entity.GenusName)</span>@Html.HiddenFor(x => x.Entity.GenusID)
        @Html.HiddenFor(x => x.Entity.GenusID)
        <span class="input-group-append">
            @if (Model.Entity.GenusID > 0)
            {
                <a href="@Url.Action("Edit", "Genus", new { @entityId = Model.Entity.GenusID })" class="btn btn-default btn-flat">
                    <i class="fa fa-link"></i>
                </a>
            }
        </span>
        <span class="input-group-append">
            <button id="btnOpenGenusLookupModal"
                    type="button"
                    data-ggtools-id-field="Entity_GenusID" 
                    data-ggtools-name-field="Entity_GenusName" 
                    class="btn btn-default btn-flat">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
</div>