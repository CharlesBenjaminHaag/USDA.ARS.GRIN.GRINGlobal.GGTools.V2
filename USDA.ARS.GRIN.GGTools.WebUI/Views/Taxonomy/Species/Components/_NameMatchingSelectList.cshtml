@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.SpeciesViewModel
<hr />
<button id="btnSaveSpecies1" type="button" class="btn btn-default float-right m-1" data-dismiss="modal">Add Selected Species</button>

<table id="table-species-name-matches" class="table table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>ID</th>
            <th>Name</th>
            <th>Authority</th>
            <th>Lev.</th>
            <th>Dice</th>
        </tr>
    </thead>
    @foreach (var result in Model.DataCollection)
    {
<tr>
    <td>@result.ID</td>
    <td>@result.ID</td>
    <td>@result.Name</td>
    <td>@result.SpeciesAuthority</td>
    <td>@result.MatchRankingLevenshtein</td>
    <td>@result.MatchRankingDice</td>
</tr>
    }
</table>
<script type="text/javascript">
    InitDataTableLookupFormat("table-species-name-matches");
</script>

