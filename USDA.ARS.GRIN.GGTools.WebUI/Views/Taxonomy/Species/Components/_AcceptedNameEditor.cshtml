@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.SpeciesViewModel
<div class="row accepted">
    <div id="section-accepted-name" class="col-md-6 accepted">
        <div class="form-group">
            <label>Accepted Name</label>
            <div class="input-group">
                <span id="placeholder-AcceptedName" style="background-color: #ecf0f5; border: 1px solid #ced4da; width: 100%; position: relative; -ms-flex: 1 1 auto; flex: 1 1 auto; width: 1%; min-width: 0; margin-bottom: 0; padding: 0.375rem 0.75rem; height: calc(2.25rem + 2px);">@Html.Raw(Model.Entity.AcceptedName) </span>
                @Html.HiddenFor(x => x.Entity.AcceptedName)
                @Html.HiddenFor(x => x.Entity.AcceptedID)
                <span class="input-group-append">
                    @if (Model.Entity.AcceptedID > 0)
                    {
                        <a href="@Url.Action("Edit", "Species", new { @entityId = Model.Entity.AcceptedID })" class="btn btn-default btn-flat">
                            <i class="fa fa-link"></i>
                        </a>
                    }
                    <button id="btnOpenSpeciesLookupModal"
                            type="button"
                            data-toggle="modal"
                            data-ggtools-id-field="Entity_AcceptedID" 
                            data-ggtools-name-field="Entity_AcceptedName" 
                            data-target="#modal-species-lookup"
                            class="btn btn-default btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>
    <div id="section-synonym-code" class="col-md-2 accepted">
        <div class="form-group">
            <label>Synonym Code</label>
            @Html.DropDownListFor(x => x.Entity.SynonymCode, Model.SynonymCodes, "NULL", new { @class = "form-control" })
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Entity_AcceptedName').on('change', function () {
            $('#placeholder-AcceptedName').html($(this).val());
        });
    });
</script>