@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.SynonymMapViewModel
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Synonyms (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div id="section-search-results" class="data-list">
            <table id="data_table_taxonomy_species_synonym_map" class="table table-striped ggtools" style="width:100%;">
                <thead>
                    <tr>
                        <th></th>
                        <th>ID</th>
                        <th>Taxon A ID</th>
                        <th>Taxon A Name</th>
                        <th>Synonym Type</th>
                        <th>Taxon B ID</th>
                        <th>Taxon B Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var result in Model.DataCollection)
                    {
                    <tr>
                        <td>
                            @result.ID
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "SpeciesSynonymMap", new { @entityId = result.ID })">[@result.ID]</a>
                        </td>
                        <td>@result.SpeciesAID</td>
                        <td>
                            <a href="@Url.Action("Edit", "Species", new { entityId = result.SpeciesAID })">
                                @Html.Raw(result.SpeciesAAssembledName)
                            </a>
                        </td>
                        <td>@result.SynonymDescription</td>
                        <td>@result.SpeciesBID</td>
                        <td>
                            <a href="@Url.Action("Edit", "Species", new { entityId = result.SpeciesBID })">
                                @Html.Raw(result.SpeciesBAssembledName)
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "SpeciesSynonymMap", new { entityId = result.ID })" class="btn btn-default btn-sm float-right row-edit">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            
        </div>
    </div>
</div>

