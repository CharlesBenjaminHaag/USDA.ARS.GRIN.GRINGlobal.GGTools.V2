@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.SynonymMapViewModel

<table id="data_table_taxonomy_species_synonym_map" class="table table-striped ggtools" style="width:100%;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Item</th>
            <th>Key</th>
            <th>Taxon A ID</th>
            <th>Taxon A Name</th>
            <th>Synonym Type</th>
            <th>Taxon B ID</th>
            <th>Taxon B Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model.DataCollection)
        {
        <tr>
            <td>@result.ID</td>
            <td>@result.SysFolderItemMapID</td>
            <td>@result.EntityKey</td>
            <td>@result.SpeciesAID</td>
            <td>
                <a href="@Url.Action("Edit", "Species", new { entityId = result.SpeciesAID })">
                    @Html.Raw(result.SpeciesAAssembledName)
                </a>
            </td>
            <td>@result.SynonymDescription</td>
            <td>@result.SpeciesBID</td>
            <td>
                <a href="@Url.Action("Edit", "Species", new { entityId = result.SpeciesBID })">
                    @Html.Raw(result.SpeciesBAssembledName)
                </a>
            </td>
            <td>
                <a href="@Url.Action("Edit", "SpeciesSynonymMap", new { entityId = result.ID })" class="btn btn-default btn-sm float-right row-edit">
                    <i class="fa fa-edit"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTableFolderFormat("data_table_taxonomy_species_synonym_map");
    });
</script>
