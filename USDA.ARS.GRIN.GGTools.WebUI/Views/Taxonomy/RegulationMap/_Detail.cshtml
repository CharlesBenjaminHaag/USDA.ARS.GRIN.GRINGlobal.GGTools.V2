@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.RegulationMapViewModelBase
<div id="section-folder-confirmation"></div>
@using (Html.BeginForm("Search", "RegulationMap", FormMethod.Post, new { id = "frmMain" }))
{
    @Html.HiddenFor(x => x.EventAction)
    @Html.HiddenFor(x => x.EventValue)
    @Html.HiddenFor(x => x.TableName)
    @Html.HiddenFor(x => x.TableCode)
    @Html.HiddenFor(x => x.PageTitle)
    @Html.HiddenFor(x => x.AuthenticatedUserCooperatorID)
    <div class="card">
        <div class="card-header p-2">
            <ul class="nav nav-pills">
                <li class="nav-item"><a class="nav-link active" href="#section-search-criteria" data-toggle="tab">Search Criteria</a></li>
                <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane active" id="section-search-criteria">
                    <div class="row">
                        @Html.Partial("~/Views/Components/_ShowHideButtons.cshtml")
                        <div class="col-md-3">
                            <div class="form-group">
                                <label id="lblStandardAbbreviation">Geography</label>
                                @Html.DropDownListFor(x => x.SearchEntity.GeographyID, Model.States, "All geographies", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group form-horizontal">
                                <label>Regulation</label>
                                @Html.TextBoxFor(x => x.SearchEntity.AssembledName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group form-horizontal">
                                <label>Description</label>
                                @Html.TextBoxFor(x => x.SearchEntity.Description, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Exempt</label>
                                @Html.DropDownListFor(x => x.SearchEntity.IsExempt, Model.YesNoOptions, "Either", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group form-horizontal">
                                <label>Family Name</label>
                                @Html.TextBoxFor(x => x.SearchEntity.FamilyName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group form-horizontal">
                                <label>Genus Name</label>
                                @Html.TextBoxFor(x => x.SearchEntity.GenusName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group form-horizontal">
                                <label>Species Name</label>
                                @Html.TextBoxFor(x => x.SearchEntity.SpeciesName, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    @Html.Partial("~/Views/Taxonomy/RegulationMap/_DetailExtended.cshtml")
                    <div>
                        <button id="btnReset" type="button" class="btn btn-default">Reset</button>
                        <div class="btn-group float-right">
                            <button id="btnSearch" type="submit" class="btn btn-default">Search</button>
                            <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu" role="menu" style="">
                                <a id="btnOpenDynamicFolderModal" class="dropdown-item" href="#">Save Search</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="timeline">
                    <div class="row">
                        <div class="col-md-12">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

