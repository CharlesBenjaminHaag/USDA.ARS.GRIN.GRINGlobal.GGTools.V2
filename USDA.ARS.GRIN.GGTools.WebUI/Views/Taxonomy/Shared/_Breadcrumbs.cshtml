<!-- BEGIN BREADCRUMBS -->
@{ 
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    var entityid = ViewContext.RouteData.Values["entityId"];
    var referrer = Request.UrlReferrer;
    var sessionKeyName = "SEARCH_" + controllerName.ToUpper();
}

<ol class="breadcrumb float-sm-right">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Navigate","Home", new { applicationCode = "GGT-TAX"})">Home</a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index", controllerName)">@controllerName</a>   
    </li>

    @if ((actionName == "Add") || (actionName == "Edit") || (actionName == "GetBatchEditor"))
    {
        if (Session[controllerName + "_SEARCH"] != null)
        {
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index",controllerName)">Return to Search</a>
            </li>
        }
    }
    <li class="breadcrumb-item active">@actionName</li>
</ol>
<!-- END BREADCRUMBS -->
