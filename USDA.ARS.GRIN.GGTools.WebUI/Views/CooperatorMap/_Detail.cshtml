@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CooperatorMapViewModelBase
<div id="section-controls" class="card card-primary">
    <div class="card-header">
        <div class="btn-group">
            <a href="@Url.Action("Add","Cooperator")" class="btn btn-default btn-sm"><i class="fa fa-plus"></i> New</a>
        </div>
        <div class="btn-group">
            <button id="btnSetOwner" type="button" class="btn btn-default btn-sm"><i class="fa fa-lock"></i> Set Ownership</button>
        </div>
    </div>
    <div class="card-body">
        <div id="section-search-criteria" class="search-criteria">
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group form-horizontal">
                        <label>Owned By</label>
                        @Html.DropDownListFor(x => x.SearchEntity.OwnedByCooperatorID, Model.Cooperators, "All Cooperators", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group form-horizontal">
                        <label>Created By</label>
                        @Html.DropDownListFor(x => x.SearchEntity.CreatedByCooperatorID, Model.Cooperators, "All Cooperators", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group form-horizontal">
                        <label>Last Modified By</label>
                        @Html.DropDownListFor(x => x.SearchEntity.ModifiedByCooperatorID, Model.Cooperators, "All Cooperators", new { @class = "form-control" })
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group form-horizontal">
                        <label>Cooperator Name</label>
                        @Html.TextBoxFor(x => x.SearchEntity.CooperatorName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-horizontal">
                        <label>Group Tag</label>
                        @Html.TextBoxFor(x => x.SearchEntity.GroupTag, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <button id="btnReset" type="button" class="btn btn-default">Reset</button>
        <div class="btn-group float-right">
            <button id="btnSubmitSearch" type="submit" class="btn btn-default">Search</button>
        </div>
    </div>
</div>


