@{
    Layout = "~/Views/Shared/_LayoutAdminLTE3Login.cshtml";
}
<div class="login-box" style="width:600px;">
    <div class="card card-outline ">
        <div class="card-header text-center" style="font-size: 2.0rem;">
            Curator Tool Account Request
        </div>
        <div class="card-body">
            <h5>Thank You</h5>
            <p>Your request has been received. Once it has been approved, the user will receive an email containing their credentials and login instructions.</p>
            <p>
               Questions? Please contact us at <a href="mailto:gringlobal.feedback@usda.gov">gringlobal.feedback@usda.gov</a>
            </p>
            <div class="row">
                <div class="col-md-6">
                    <a href="@Url.Action("Index", "Login")" class="btn btn-default btn-flat btn-block">Return to Login Page</a>
                </div>
                <div class="col-md-6">
                    <a href="@Url.Action("New", "Account", new { @seq=1 })" class="btn btn-default btn-flat btn-block">Request Another Account</a>
                </div>
            </div>
        </div>
        <div class="card-footer">Version @AppInfo.GetVersion()</div>
    </div>
</div>





