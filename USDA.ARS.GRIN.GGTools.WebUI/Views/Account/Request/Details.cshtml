@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CooperatorViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdminLTE3Login.cshtml";
}
<div class="login-box" style="width:600px;">
    <div class="card card-outline ">
        <div class="card-header text-center" style="font-size: 2.0rem;">
            Curator Tool Account Request
        </div>
        <div class="card-body">
            @Html.Partial("~/Views/Shared/_ValidationMessages.cshtml")
            @using (Html.BeginForm("Details", "Account", FormMethod.Post, new { id = "frmAccountDetails" }))
            {
                @Html.HiddenFor(x => x.EventAction)
                @Html.HiddenFor(x => x.EventValue)
                <div>
                    <label>Contact Information</label>
                    <div id="section-employee-email" class="row">
                        <div class="col-md-6">
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(x => x.Entity.FirstName, new { @class = "form-control", @placeholder = "First name" })
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(x => x.Entity.LastName, new { @class = "form-control", @placeholder = "Last name" })
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">

                            <div class="input-group mb-3">
                                @Html.TextBoxFor(x => x.Entity.EmailAddress, new { @class = "form-control", @placeholder = "Employee email address", @type = "email" })
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-envelope"></span>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="col-md-6">

                            <div class="input-group">
                                @Html.TextBoxFor(x => x.Entity.JobTitle, new { @class = "form-control", @placeholder = "Job title" })
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fas fa-building"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.Entity.PrimaryPhone, new { @class = "form-control", @placeholder = "Phone number", @mask = "(999) 999-9999" })
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <label>Site</label>
                    <div id="section-employee-address" class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.DropDownListFor(x => x.Entity.SiteID, Model.Sites, "Select site", new { @class = "form-control" })
                            </div>
                        </div>
                        <div id="section-site-address" class="col-md-12">
                            <!--DYNAMIC SITE DETAILS HERE-->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Primary Address</label>
                                        <input type="text" class="form-control" readonly="readonly" />
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" readonly="readonly" />
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>City</label>
                                        <input type="text" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>State</label>
                                        <input type="text" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>ZIP/Postal Code</label>
                                        <input type="text" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ENVIRONMENTS -->
                    @*<label>Environment(s)</label>
                    <div id="section-employee-environments" class="row">
                        <div class="col-md-6">
                            <div class="input-group">
                                <input type="text" disabled="" readonly class="form-control" value="Production">
                                <span class="input-group-addon">
                                    <input id="cbxCopyNote" type="checkbox" checked="checked">
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group">
                                <input type="text" disabled="" readonly class="form-control" value="Training">
                                <span class="input-group-addon">
                                    <input id="cbxCopyNote" type="checkbox" checked="checked">
                                </span>
                            </div>
                        </div>
                    </div>*@
                    <div class="row">
                        <div class="col-md-6">
                            <a href="@Url.Action("New","Account")"
                               class="btn btn-default btn-block btn-flat">
                                Cancel
                            </a>
                        </div>
                        <div class="col-md-6">
                            <button id="btnStepSaveDetails" class="btn btn-default btn-block btn-flat" type="submit">Continue >></button>
                        </div>
                    </div>

                </div>
            }
        </div>
        <div id="search-progress-overlay-cooperator" class="overlay">
            <i class="fas fa-2x fa-sync fa-spin"></i>
        </div>
        <div class="card-footer">Version @AppInfo.GetVersion()</div>
    </div>
</div>
<script type="text/javascript">
    //btnStepSaveDetails
    //$('#btnStepSaveDetails').on('click', function () {
    //    //TODO?
    //});

    //function Validate() {
    //    var isValid = true;
    //    //TODO
    //    return isValid;
    //}

    //function Save() {
    //    //TODO?
    //}

    $("#search-progress-overlay-cooperator").hide();

    $('#Entity_SiteID').on('change', function () {
        LoadSite(this.value);
    });

    function LoadSite(siteId) {
        link = '@Url.Action("GetSite", "Account")';
        var formData = new FormData();

        formData.append("entityId", siteId);

        $("#search-progress-overlay-cooperator").show();

        $.ajax({
        url: link,
        type: 'POST',
        cache: false,
        contentType: false,
        processData: false,
        data: formData,
        success: function (response) {
            //DEBUG
            //alert("DEBUG: " + response);

            $("#section-site-address").html(response);
            $("#search-progress-overlay-cooperator").hide();
            },
            error: function () {
                alert("Error calling Account.GetSite() with ID " + siteId);
                $("#search-progress-overlay-cooperator").hide();
            }
        });
    }
</script>
