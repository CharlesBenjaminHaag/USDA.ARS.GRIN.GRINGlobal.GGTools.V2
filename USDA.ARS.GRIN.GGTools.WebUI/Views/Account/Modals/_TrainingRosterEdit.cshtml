@model USDA.ARS.GRIN.GGTools.ViewModelLayer.TrainingRosterViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdminLTE3Login.cshtml";
}
<div class="modal fade" id="modal-training-roster-edit" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div id="search-progress-overlay" class="overlay">
                <i class="fas fa-2x fa-sync fa-spin"></i>
            </div>
            <div class="modal-header">
                <h4 class="modal-title">
                    <i class="fas fa-graduation-cap"></i>
                    Create Training Roster
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Details", "Account", FormMethod.Post, new { id = "frmAccountDetails" }))
                {
                <div>
                    <label>Course Details</label>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "First name" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @placeholder = "First name" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(x => x.StudentCount, new { @class = "form-control", @placeholder = "First name" })
                            </div>
                        </div>
                    </div>
                    
                    <label>Cooperator Information</label>
                    <div id="section-employee-email" class="row">
                        <div class="col-md-4">
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(x => x.DefaultCooperatorViewModel.Entity.FirstName, new { @class = "form-control", @placeholder = "First name" })
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group mb-3">
                                @Html.TextBoxFor(x => x.DefaultCooperatorViewModel.Entity.LastName, new { @class = "form-control", @placeholder = "Last name" })
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">

                            <div class="input-group mb-3">
                                @Html.TextBoxFor(x => x.DefaultCooperatorViewModel.Entity.EmailAddress, new { @class = "form-control", @placeholder = "Employee email address", @type = "email" })
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-envelope"></span>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="col-md-6">

                            <div class="input-group">
                                @Html.TextBoxFor(x => x.DefaultCooperatorViewModel.Entity.JobTitle, new { @class = "form-control", @placeholder = "Job title" })
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fas fa-building"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.DefaultCooperatorViewModel.Entity.PrimaryPhone, new { @class = "form-control", @placeholder = "Phone number", @mask = "(999) 999-9999" })
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <label>Site</label>
                    <div id="section-employee-address" class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.DropDownListFor(x => x.DefaultCooperatorViewModel.Entity.SiteID, Model.DefaultCooperatorViewModel.Sites, "Select site", new { @class = "form-control" })
                            </div>
                        </div>
                        <div id="section-site-address" class="col-md-12">
                            <!--DYNAMIC SITE DETAILS HERE-->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Primary Address</label>
                                        <input type="text" class="form-control" readonly="readonly" />
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" readonly="readonly" />
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>City</label>
                                        <input type="text" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>State</label>
                                        <input type="text" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>ZIP/Postal Code</label>
                                        <input type="text" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    

                </div>
                }
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button id="btnCreateTrainingRoster" type="button" class="btn btn-default" data-dismiss="modal">Create Training Roster</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).on('shown.bs.modal', function (e) {
        /*$.fn.dataTable.tables({ visible: true, api: true }).columns.adjust();*/
        $(".overlay").hide();
    });
</script>