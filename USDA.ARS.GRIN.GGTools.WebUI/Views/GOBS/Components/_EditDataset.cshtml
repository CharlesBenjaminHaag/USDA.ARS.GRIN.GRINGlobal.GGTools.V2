@model USDA.ARS.GRIN.GGTools.GOBS.ViewModelLayer.GOBSViewModel
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-table"></i> Details</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-1">
                <div class="form-group">
                    <label>ID</label>
                    @Html.TextBoxFor(x => x.DatasetEntity.dataset_id, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label>Name</label>
                    @Html.TextBoxFor(x=>x.DatasetEntity.name, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Type</label>
                    <div class="input-group">
                        @Html.TextBoxFor(x => x.DatasetEntity.type, new { @class="form-control", @readonly="readonly" })
                        @Html.HiddenFor(x => x.DatasetEntity.type_id)
                        <span class="input-group-append">
                            <a href="" class="btn btn-default btn-flat">
                                <i class="fa fa-link"></i>
                            </a>
                        </span>
                        <span class="input-group-append">
                            <button 
                                    id="btnOpenTypeLookupModal" 
                                    data-ggtools-id-field="type_id" 
                                    data-ggtools-name-field="type" 
                                    type="button" class="btn btn-default btn-flat">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Method</label>
                    <div class="input-group">
                        <span id="placeholder-accepted-name" style="background-color: #ecf0f5; border: 1px solid #ced4da; width: 100%; position: relative; -ms-flex: 1 1 auto; flex: 1 1 auto; width: 1%; min-width: 0; margin-bottom: 0; padding: 0.375rem 0.75rem; height: calc(2.25rem + 2px);">@Html.Raw(Model.DatasetEntity.method) </span>
                        @Html.HiddenFor(x => x.DatasetEntity.method_id)
                        <span class="input-group-append">
                            <a href="" class="btn btn-default btn-flat">
                                <i class="fa fa-link"></i>
                            </a>
                        </span>
                        <span class="input-group-append">
                            <button 
                                    id="btnOpenMethodLookupModal" 
                                    data-ggtools-id-field="method_id" 
                                    data-ggtools-name-field="method" 
                                    type="button" class="btn btn-default btn-flat">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <button class="btn btn-default btn-flat float-right"><i class="fa fa-save"></i> Save</button>
        <button class="btn btn-default btn-flat float-right" data-toggle="modal" data-target="#modal-permission-grant"><i class="fa fa-users-cog"></i> Grant Permissions</button>
    </div>
</div>
<script type="text/javascript">
    $("#btnOpenMethodLookupModal").on('click', function (event) {
        var idField = $(this).data("ggtools-id-field");
        var nameField = $(this).data("ggtools-name-field");
        OpenLookupModal("method", idField, nameField);
    });

    $("#btnOpenTypeLookupModal").on('click', function (event) {
         
    });
</script>