@model USDA.ARS.GRIN.GGTools.ViewModelLayer.WebCooperatorViewModel
<div class="card bg-light d-flex flex-fill">
    <div class="card-header text-muted border-bottom-0"  style="background-color:white;">
        <a href="@Url.Action("Search","WebOrderRequest", new { organization = @Model.Entity.Organization })">@Model.Entity.Organization</a>
    </div>
    <div class="card-body pt-0" style="background-color:white;">
        <div class="row">
            <div class="col-7">
                <h2 class="lead"><b>@Model.Entity.LastName, @Model.Entity.FirstName</b></h2>
                <p class="text-muted text-sm"><b>Created: </b> @Model.Entity.CreatedDate.ToShortDateString() at @Model.Entity.CreatedDate.ToShortTimeString() </p>
                <ul class="ml-4 mb-0 fa-ul text-muted">
                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address:@Model.Entity.Address1, @Model.Entity.City, @Model.Entity.State  @Model.Entity.PostalCode</li>
                    <li class="small">
                        <span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span> Email:
                        <a href="@Url.Action("Search","WebOrderRequest", new { emailAddress = Model.Entity.EmailAddress })">@Model.Entity.EmailAddress</a>
                    </li>
                </ul>
            </div>
            <div class="col-5 text-center">
                <img src="~/dist/img/user-default.png" alt="user-avatar" class="img-circle img-fluid">
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="text-right">
            <a href="@Url.Action("Edit","WebCooperator", new { @entityId = Model.Entity.ID})" class="btn btn-sm btn-primary">
                <i class="fas fa-user"></i> View Web Cooperator Record
            </a>
        </div>
    </div>
</div>