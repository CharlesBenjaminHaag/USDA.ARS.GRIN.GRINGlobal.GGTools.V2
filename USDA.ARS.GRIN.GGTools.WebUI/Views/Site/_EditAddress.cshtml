@model USDA.ARS.GRIN.GGTools.ViewModelLayer.SiteViewModel
@Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Primary Address</label>
            @Html.TextBoxFor(x => x.Entity.PrimaryAddress1, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Entity.PrimaryAddress2, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Entity.PrimaryAddress3, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label>City</label>
            @Html.TextBoxFor(x => x.Entity.City, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>State</label>
            @Html.TextBoxFor(x => x.Entity.State, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="col-md-5">
        <div class="form-group">
            <label>ZIP/Postal Code</label>
            @Html.TextBoxFor(x => x.Entity.PostalIndex, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

</div>
